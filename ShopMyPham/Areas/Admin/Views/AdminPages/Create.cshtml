@model ShopMyPham.Models.Page

@{
    ViewData["Title"] = "Thêm Trang";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home me-2"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminPages" asp-action="Index" class="breadcrumb-item">Danh sách Page</a>
            <span class="breadcrumb-item active">Tạo mới Page</span>
        </nav>
    </div>
</div>
<form asp-controller="AdminPages" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex mt-3 align-items-center justify-content-between">
            <div class="mt-3">
                <button class="btn btn-primary mb-3">
                    <i class="anticon anticon-save"></i>
                    <span>Lưu</span>
                </button>
            </div>
        </div>

        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <button class="nav-link active fw-semibold text-uppercase" id="product-edit-basic-tab" data-bs-toggle="tab" data-bs-target="#product-edit-basic" type="button" role="tab" aria-controls="product-edit-basic" aria-selected="true">Thông tin cơ bản</button>
                <button class="nav-link fw-semibold text-uppercase" id="product-edit-option-tab" data-bs-toggle="tab" data-bs-target="#product-edit-option" type="button" role="tab" aria-controls="product-edit-option" aria-selected="false">Thông tin thiết lập</button>
                <button class="nav-link fw-semibold text-uppercase" id="product-edit-description-tab" data-bs-toggle="tab" data-bs-target="#product-edit-description" type="button" role="tab" aria-controls="product-edit-description" aria-selected="false">Mô tả</button>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="product-edit-basic" role="tabpanel" aria-labelledby="product-edit-basic-tab" tabindex="0">
                <div class="card">
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label class="fw-semibold" for="productName">Tên Page</label>
                            <input type="text" class="form-control" asp-for="PageName">
                        </div>
                        <div class="form-group mt-2">
                            <label class="fw-semibold" for="productName">Ordering</label>
                            <input type="text" class="form-control" asp-for="Ordering">
                        </div>
                        <div class="form-group mt-3">
                            <label class="fw-semibold" for="productBrand">Ảnh đại diện</label>
                            <br />
                            <input name="fThumb" type="file" class="form-control-file" asp-for="Thumb" />
                            <span asp-validation-for="Thumb" class="text-danger"></span>
                        </div>
                        <div class="row mt-3">
                            <div class="mt-4">
                                <!---->
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="Active" checked>
                                    <label class="form-check-label" >Public </label>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <div class="tab-pane fade" id="product-edit-option" role="tabpanel" aria-labelledby="product-edit-option-tab" tabindex="0">
                <div class="card">
                    <div class="card-body mt-3">
                        <div class="form-group">
                            <label class="fw-semibold" for="productSize">Title</label>
                            <input type="text" class="form-control" asp-for="Title">
                        </div>
                        <div class="form-group">
                            <label class="fw-semibold" for="productColors">MetaDesc</label>
                            <input type="text" class="form-control" asp-for="MetaDesc">
                        </div>
                        <div class="form-group">
                            <label class="fw-semibold" for="productFit">MetaKey</label>
                            <input type="text" class="form-control" asp-for="MetaKey">
                        </div>
                    </div>
                </div>

            </div>
            <div class="tab-pane fade" id="product-edit-description" role="tabpanel" aria-labelledby="product-edit-description-tab" tabindex="0">
                <div class="card">
                    <div class="card-body mt-3 ">
                        <textarea class="summernote w-100" asp-for="Contents"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-controller="AdminPages" asp-action="Index">Back to List</a>
</div>
<script>

    jQuery(document).ready(function () {
        $('.summernote').summernote({
            fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
            styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
            height: 700,
            minHeight: null,
            maxHeight: null,
            focus: true
        });
    });
</script>









