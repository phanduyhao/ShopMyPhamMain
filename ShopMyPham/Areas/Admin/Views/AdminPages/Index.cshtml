@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<ShopMyPham.Models.Page>

@{
    ViewData["Title"] = "Danh sách Page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home me-1"></i>Home</a>
                <a class="breadcrumb-item" asp-area="Admin" asp-controller="Home" asp-action="AdminAccount">Danh sách Page: page @ViewBag.CurrentPage</a>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row mt-4">
               
                <div class="col-lg-12 text-end mb-3">
                    <a class="btn btn-primary" asp-controller="AdminProducts" asp-action="Create">
                        <i class="fa-solid fa-plus"></i>                        <span>Thêm Trang</span>
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                    <div class="row align-items-center mb-5"><div class="col-sm-12 col-md-6"><div class="dataTables_length" id="DataTables_Table_0_length"><label>Show <select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" class="custom-select "><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> entries</label></div></div><div class="col-sm-12 col-md-6"><div id="DataTables_Table_0_filter" class="dataTables_filter float-end"><label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0"></label></div></div></div><div class="row">
                        <div class="col-sm-12">
                            <table class="table table-hover e-commerce-table dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting">ID</th>
                                        <th class="sorting">Tên Trang</th>
                                        <th class="sorting">Trạng thái</th>
                                        <th class="sorting">#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="">
                                                    @item.PageId
                                                </td>
                                                <td>
                                                    @item.PageName
                                                </td>
                                                <td>
                                                    @item.Status
                                                </td>
                                                <td class="text-end">
                                                    <a asp-area="Admin" asp-controller="AdminPages" asp-action="Details" asp-route-id="@item.PageId" class="btn btn-success">View</a>
                                                    <a asp-area="Admin" asp-controller="AdminPages" asp-action="Edit" asp-route-id="@item.PageId" class="btn btn-warning">Edit</a>
                                                    <a asp-area="Admin" asp-controller="AdminPages" asp-action="Delete" asp-route-id="@item.PageId" class="btn btn-danger">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>