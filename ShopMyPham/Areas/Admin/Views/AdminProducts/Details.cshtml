@model ShopMyPham.Models.Product

@{ ViewData["Title"] = "Thông tin sản phẩm" + Model.ProductName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; }

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home me-2"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminProducts" asp-action="Index" class="breadcrumb-item">Danh sách sản phẩm</a>
            <span class="breadcrumb-item active">Thông tin sản phẩm : @Model.ProductName</span>
        </nav>
    </div>
</div>

<div class="page-header no-gutters has-tab mt-4">
    <div class="d-md-flex mb-4 align-items-center justify-content-between">
        <div class="media d-flex align-items-center mb-4">
            <div class="avatar avatar-image rounded">
                <img src="~/images/products/@Model.Thumb" height="70" width="70" alt="@Model.Title" />
            </div>
            <div class="ms-3">
                <h4 class="mb-0">@Model.ProductName</h4>
                <p class="text-muted mb-0">ID: #@Model.ProductId</p>
            </div>
        </div>
        <div class="mb-3">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a>
        </div>
    </div>

</div>



<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active fw-bold" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">THÔNG TIN</button>
        <button class="nav-link fw-bold" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">ẢNH</button>
    </div>
</nav>
<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
        <div class="container-fluid px-0">
            <div class="tab-content mt-3">
                <div class="tab-pane fade show active" id="product-overview">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">THÔNG TIN PAGE : @Model.ProductName</h4>

                            <table class="table table-responsive">
                                <tbody>
                                    <tr>
                                        <td>ID:</td>
                                        <td class="text-dark fw-semibold">@Model.ProductId</td>
                                    </tr>
                                    <tr>
                                        <td>Tên sản phẩm:</td>
                                        <td>@Model.ProductName</td>
                                    </tr>
                                    <tr>
                                        <td>Mô tả ngắn:</td>
                                        <td>@Model.ShortDesc</td>
                                    </tr>
                                    <tr>
                                        <td>Giá:</td>
                                        <td>@Model.Price.Value.ToString("#,##0") VNĐ</td>

                                    </tr>
                                    <tr>
                                        <td>Discount:</td>
                                        <td>@Model.Discount.Value.ToString("#,##0") VNĐ</td>
                                    </tr>
                                    <tr>
                                        <td>Trạng thái:</td>
                                        <td>
                                            @if (Model.Active)
                                            {
                                                <div class="switch me-3">
                                                    <input type="checkbox" id="switch-1" checked="" disabled />
                                                    <label for="switch-1"></label>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="switch me-3">
                                                    <input type="checkbox" id="switch-1" disabled />
                                                    <label for="switch-1"></label>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Bestseller:</td>
                                        <td>
                                            @if (Model.BestSeller)
                                            {
                                                <div class="switch me-3">
                                                    <input type="checkbox" id="switch-1" checked="" disabled />
                                                    <label for="switch-1"></label>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="switch me-3">
                                                    <input type="checkbox" id="switch-1" disabled />
                                                    <label for="switch-1"></label>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>HomeFlag:</td>
                                        <td>
                                            @if (Model.HomeFlag)
                                            {
                                                <div class="switch me-3">
                                                    <input type="checkbox" id="switch-1" checked="" disabled />
                                                    <label for="switch-1"></label>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="switch me-3">
                                                    <input type="checkbox" id="switch-1" disabled />
                                                    <label for="switch-1"></label>
                                                </div>
                                            }

                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Danh mục:</td>
                                        <td>@Model.Cate.CateName</td>
                                    </tr>
                                    <tr>
                                        <td>Ngày tạo:</td>
                                        <td>@Model.DateCreated</td>
                                    </tr>
                                    <tr>
                                        <td>Ngày tạo:</td>
                                        <td>@Model.DateModified</td>
                                    </tr>
                                    <tr>
                                        <td>Tiêu đề:</td>
                                        <td>@Model.Title</td>
                                    </tr>
                                    <tr>
                                        <td>MetaDesc:</td>
                                        <td>@Model.MetaDesc</td>
                                    </tr>
                                    <tr>
                                        <td>MetaKey:</td>
                                        <td>@Model.MetaKey</td>
                                    </tr>
                                    <tr>
                                        <td>Tags:</td>
                                        <td>@Model.Tags</td>
                                    </tr>
                                    <tr>
                                        <td>Ảnh đại diện:</td>
                                        <td>
                                            <img width="200" height="200" src="~/images/products/@Model.Thumb" alt="@Model.Title" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title py-0">THÔNG TIN MÔ TẢ</h4>
                        </div>
                        <div class="card-body pt-4">
                            @Html.Raw(Model.Description)
                        </div>
                    </div>
                </div>

            </div>
        </div>



    </div>
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
        <div class="mt-3">
            <img class="img-fluid w-50" src="~/images/products/@Model.Thumb" alt="@Model.Title" />
        </div>
    </div>
</div>



















