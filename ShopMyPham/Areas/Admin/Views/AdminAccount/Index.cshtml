@model IEnumerable<ShopMyPham.Models.Account>

@{
    ViewData["Title"] = "Danh sách tài khoản quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="main-content">
    <div class="pagetitle">

        <nav>
            <ol class="breadcrumb">
                <a asp-controller="Home" asp-area="Admin" asp-action="Index" class="breadcrumb-item">Home</a>
                <a asp-controller="AdminAccount" asp-area="Admin" asp-action="Index" class="breadcrumb-item">Danh sách quyền truy cập</a>
                <a asp-controller="Home" asp-area="Admin" asp-action="Index" class="breadcrumb-item active">Thông tin quyền truy cập</a>
            </ol>
        </nav>
       
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row mt-4">
                <div class="col-lg-8">
                    <div class="d-md-flex">
                        <div class="mb-3 me-3">
                            <select  asp-items="ViewBag.QuyenTruyCap" class="custom-select" style="min-width: 180px;">
                                <option value="" disabled selected>Chọn quyền truy cập</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <select class="custom-select" style="min-width: 180px;" id="idstatus" asp-items="ViewBag.IsTrangthai">
                                <option selected value="" disabled>Chọn trạng thái</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-end mb-3">
                    <a class="btn btn-primary" asp-controller="AdminAccount" asp-action="Create">
                        <i class="fa-solid fa-plus"></i>
                        <span>Thêm tài khoản</span>
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                    <div class="row align-items-center mb-5"><div class="col-sm-12 col-md-6"><div class="dataTables_length" id="DataTables_Table_0_length"><label>Show <select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" class="custom-select "><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> entries</label></div></div><div class="col-sm-12 col-md-6"><div id="DataTables_Table_0_filter" class="dataTables_filter float-end"><label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0"></label></div></div></div><div class="row">
                        <div class="col-sm-12">
                            <table class="table table-hover e-commerce-table dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting"  >ID</th>
                                        <th class="sorting" >Họ tên</th>
                                        <th class="sorting"  >Email</th>
                                        <th class="sorting"  >Số điện thoại</th>
                                        <th class="sorting" >Lần truy cập cuối cùng</th>

                                        <th class="sorting"  >Quyền truy cập</th>
                                        <th class="sorting"  >Trạng thái</th>
                                        <th class="sorting"  ></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr role="row" class="odd">
                                                <td class="">
                                                    @item.AccountId
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style="max-width: 60px" alt="">
                                                        <h6 class="mb-0 ms-2">@item.FullName</h6>
                                                    </div>
                                                </td>
                                                <td>@item.Email</td>
                                                <td>@item.Phone</td>
                                                <td>@item.LastLogin</td>
                                                <td>@item.Role.RoleName</td>
                                                <td>
                                                    @if (item.Active)
                                                    {

                                                    <div class="d-flex align-items-center">
                                                        <div class="badge badge-success badge-dot me-2"></div>
                                                        <div>Active</div>
                                                    </div>
                                                    }
                                                    else
                                                    {

                                                        <div class="d-flex align-items-center">
                                                            <div class="badge badge-success badge-dot me-2"></div>
                                                            <div>Block</div>
                                                        </div>
                                                    }
                                                </td>
                                                <td class="text-end">
                                                    <a asp-area="Admin" asp-controller="AdminAccount" asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-success">View</a>
                                                    <a asp-area="Admin" asp-controller="AdminAccount" asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-warning">Edit</a>
                                                    <a asp-area="Admin" asp-controller="AdminAccount" asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-danger">Delete</a>
                                                </td>
                                            </tr>

                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>