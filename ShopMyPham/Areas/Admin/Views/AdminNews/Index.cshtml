@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<ShopMyPham.Models.News>

@{
    ViewData["Title"] = "Danh sách Tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home me-1"></i>Home</a>
                <a class="breadcrumb-item" asp-area="Admin" asp-controller="Home" asp-action="AdminAccount">Danh sách Tin tức: page @ViewBag.CurrentPage</a>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row mt-4">
                <div class="col-lg-8">
                    
                </div>
                <div class="col-lg-4 text-end mb-5">
                    <a class="btn btn-primary" asp-controller="AdminProducts" asp-action="Create">
                        <i class="fa-solid fa-plus"></i>
                        <span>Thêm Tin tức</span>
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                 <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-hover e-commerce-table dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting">ID</th>
                                        <th class="sorting">Tiêu đề</th>
                                        <th class="sorting">Trạng thái</th>
                                        <th class="sorting">#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="">
                                                    @item.PostId
                                                </td>
                                                <td>
                                                    @item.Title
                                                </td>
                                                <td>
                                                    @if(item.Published == true){
                                                        <div class="d-flex align-items-center">
                                                            <div class="badge badge-success badge-dot me-3"></div>
                                                            <div>Public</div>
                                                        </div>
                                                    }else{
                                                        <div class="d-flex align-items-center">
                                                            <div class="badge badge-success badge-dot me-3"></div>
                                                            <div>Non-Public</div>
                                                        </div>
                                                    }
                                                </td>
                                                <td class="text-end">
                                                    <a asp-area="Admin" asp-controller="AdminPages" asp-action="Details" asp-route-id="@item.PostId" class="btn btn-success">View</a>
                                                    <a asp-area="Admin" asp-controller="AdminPages" asp-action="Edit" asp-route-id="@item.PostId" class="btn btn-warning">Edit</a>
                                                    <a asp-area="Admin" asp-controller="AdminPages" asp-action="Delete" asp-route-id="@item.PostId" class="btn btn-danger">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row"><div class="col-sm-12 col-md-5"><div class="dataTables_info" id="DataTables_Table_0_info" role="status" aria-live="polite">Showing 1 to 7 of 7 entries</div></div><div class="col-sm-12 col-md-7"><div class="dataTables_paginate paging_simple_numbers float-end" id="DataTables_Table_0_paginate"><ul class="pagination"><li class="paginate_button page-item previous disabled" id="DataTables_Table_0_previous"><a href="#" aria-controls="DataTables_Table_0" data-dt-idx="0" tabindex="0" class="page-link">Previous</a></li><li class="paginate_button page-item active"><a href="#" aria-controls="DataTables_Table_0" data-dt-idx="1" tabindex="0" class="page-link">1</a></li><li class="paginate_button page-item next disabled" id="DataTables_Table_0_next"><a href="#" aria-controls="DataTables_Table_0" data-dt-idx="2" tabindex="0" class="page-link">Next</a></li></ul></div></div></div>
                </div>
            </div>
        </div>
    </div>
</div>