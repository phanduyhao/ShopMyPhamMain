@model ShopMyPham.Models.News

@{
    ViewData["Title"] = "Xác nhận xóa bài tin:" + Model.Title;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home me-2"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminNews" asp-action="Index" class="breadcrumb-item">Danh sách Tin đăng</a>
            <span class="breadcrumb-item active">@Model.Title</span>
        </nav>
    </div>
</div>

<div class="page-header no-gutters has-tab mt-4">
    <div class="d-md-flex mb-4 align-items-center justify-content-between">
        <div class="media d-flex align-items-center mb-4">
            <div class="avatar avatar-image rounded">
                <img src="~/images/new/@Model.Thumb" height="70" width="70" alt="@Model.Title" />
            </div>
            <div class="ms-3">
                <h4 class="mb-0">@Model.Title</h4>
                <p class="text-muted mb-0">ID: #@Model.PostId</p>
            </div>
        </div>
    </div>

</div>



<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active fw-bold" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">THÔNG TIN</button>
        <button class="nav-link fw-bold" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">ẢNH</button>
    </div>
</nav>
<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" tabindex="0">
        <div class="container-fluid px-0">
            <div class="tab-content mt-3">
                <div class="tab-pane fade show active" id="product-overview">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@Model.Title</h4>
                                <form asp-action="Delete" asp-route-id="@Model.PostId">
                                    <input type="hidden" asp-for="PostId" />
                                    <table class="table table-responsive">
                                        <tbody>
                                            <tr>
                                                <td>Tiêu đề:</td>
                                                <td>@Model.Title</td>
                                            </tr>
                                            <tr>
                                                <td>Alias:</td>
                                                <td>@Model.Alias</td>
                                            </tr>
                                        <tr>
                                            <td scope="row">Trạng thái:</td>
                                            <td>
                                                <div class="checkbox">
                                                    <input asp-for="Published" type="checkbox" />
                                                    <label for="Published">Public</label>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td scope="row">Trạng thái:</td>
                                            <td>
                                                <div class="checkbox">
                                                    <input asp-for="IsHot" type="checkbox" />
                                                    <label for="IsHot">IsHot</label>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td scope="row">Trạng thái:</td>
                                            <td>
                                                <div class="checkbox">
                                                    <input asp-for="IsNewFeed" type="checkbox" />
                                                    <label for="IsNewFeed">IsNewFeed</label>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Xác nhận xóa bài viết: @Model.Title.ToUpper()</td>
                                            <td>
                                                <input type="submit" value="Xác nhận xóa Page!" class="btn btn-danger" /> 
                                            </td>
                                        </tr>
                                        </tbody>
                                     </table>
                                </form>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title py-0">THÔNG TIN MÔ TẢ</h4>
                        </div>
                        <div class="card-body pt-4">
                            @Html.Raw(Model.MaxDesc)
                        </div>
                    </div>
                </div>

            </div>
        </div>



    </div>
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" tabindex="0">
        <div class="mt-3">
            <img class="img-fluid w-50" src="~/images/new/@Model.Thumb" alt="@Model.Title" />
        </div>
    </div>
</div>


