@model ShopMyPham.Models.Role

@{
    ViewData["Title"] = "Xóa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h5 class="card-title">Xóa quyền truy cập</h5>
<table class="table table-striped">
    <tbody>
        <tr>
            <td>ID:</td>
            <td>@Model.RoleId</td>
        </tr>
        <tr>
            <td>Tên quyền truy cập:</td>
            <td>@Model.RoleName</td>
        </tr>
        <tr>
            <td>Mô tả:</td>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <td>Xác nhận xóa:</td>
           <td>
                <form asp-action="Delete" asp-route-id="@Model.RoleId">
                    <input type="hidden" asp-for="RoleId" />
                    <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                </form>
           </td>
        </tr>
    </tbody>
</table>
