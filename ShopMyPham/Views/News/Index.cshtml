@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<ShopMyPham.Models.News>

@{
    ViewData["Title"] = "Tin tức  - " + ViewBag.CurrentPage;
    Layout = "~/Views/Shared/_Layout.cshtml";
    int PageCurrent = ViewBag.CurrentPage;
    int PageNext = PageCurrent + 1;
}
<section class="z-index-2 position-relative pb-2 mb-12 " data-animated-id="1">

    <div class="bg-gray-weak mb-3">
        <div class="container">
            <nav class="py-4 lh-30px" aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center py-1">
                    <li class="breadcrumb-item"><a title="Trang chủ" href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a title="Shop" href="/shop.html">Tin tức</a></li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<div class="container mt-10 pb-3" data-animated-id="2">
    <h1 class="text-center mb-9">Tin tức nổi bật</h1>

  
    <div class="row gy-50px">

       

        @if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                string url = $"/tin-tuc/{item.Alias}-{item.PostId}.html";
                <div class="col-md-6 col-lg-4">
                    <article class="card card-post-grid-1 bg-transparent border-0 animate__fadeInUp animate__animated" data-animate="fadeInUp">
                        <figure class="card-img-top position-relative mb-10">
                            <a href="@url"class="hover-shine hover-zoom-in d-block" title="@item.Title">
                                <img data-src="~/images/new/@item.Thumb" class="img-fluid w-100 loaded" alt="@item.Title" style="height:210px" loading="lazy" src="~/images/new/@item.Thumb" data-ll-status="loaded">
                            </a>
                            <a href="@url" class="btn btn-hover-bg-dark btn-hover-text-light fw-500 btn-gray-weak post-cat position-absolute top-100 start-50 translate-middle py-2 px-7 border-0" title="Life style">Life style</a>
                        </figure>
                        <div class="card-body text-center px-md-9 py-0">
                            <h4 class="card-title lh-base mb-9"><a class="text-decoration-none" href="@url" title="@item.Title">@item.Title</a></h4>
                            <ul class="post-meta list-inline lh-1 d-flex flex-wrap justify-content-center m-0">
                                <li class="list-inline-item border-end pe-5 me-5">By <a href="@url" title="Admin">Admin</a></li>
                                <li class="list-inline-item">@item.CreateDate.Value.ToShortDateString()</li>
                            </ul>
                        </div>
                    </article>
                </div>

            }
        }
    </div>

    <div class="col-lg-12">
        <div class="pagination-area pt-10">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    @if (PageCurrent > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="/Tin-tuc.html?page=@(PageCurrent - 1)" aria-label="Previous">
                                <span class="fa fa-chevron-left"></span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" href="/Tin-tuc.html" aria-label="Previous">
                                <span class="fa fa-chevron-left"></span>
                            </a>
                        </li>
                    }

                    <li class="page-item active"><a class="page-link" href="/Tin-tuc.html?page=@PageCurrent">@PageCurrent</a></li>
                    <li class="page-item"><a class="page-link" href="/Tin-tuc.html?page=@PageNext">@PageNext</a></li>
                    <li class="page-item">
                        <a class="page-link" href="/Tin-tuc.html?page=@PageNext" aria-label="Next">
                            <span class="fa fa-chevron-right"></span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
@*  
*@</div>